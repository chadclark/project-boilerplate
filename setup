#!/bin/sh

echo "Initialization sequence activated..."
say "Initialization sequence activated"

# Remove .git from cloned repo.
rm -rf .git/ 																&& \

# Initialize fresh repo.
git init 																	&& \

# Create build directories.
mkdir public/assets/build/css/												&& \
mkdir public/assets/build/img/												&& \
mkdir public/assets/build/js/												&& \

# Create _libs directory.
mkdir public/assets/scss/_libs/ 											&& \

# Change directory to assets/css/scss/_libs/
cd public/assets/scss/_libs/ 												&& \

# Install Bourbon. Yum.
bourbon install 															&& \

# Install Neat.
neat installed																&& \

# Clone normalize.scss (https://github.com/kristerkari/normalize.scss)
git clone https://github.com/kristerkari/normalize.scss.git ./normalize 	&& \

# Change directory to normalize
cd normalize/ 																&& \

# Remove .git from normalize.scss repo.
rm -rf .git/ 																&& \

# Remove .gitignore from normalize.scss repo.
rm -rf .gitignore 															&& \

# Change directory back to project root.
cd ../../../../../ 															&& \

# Run npm install.
npm install 																&& \

# Self destruct.
rm $0

echo "Project successfully installed!"
say "Project successfully installed!"
